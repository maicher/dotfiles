# DOT SKIP server
#!/bin/sh

selected=$(gopass ls -s -f websites | dmenu -nb '#2e3440' -nf '#7b8396' -sb '#526884' -sf '#eee')

if [ -z $selected ]; then
	exit 1
fi

gopass show -C "websites/"$selected | grep otpauth

if [ $? -eq 0 ]; then
	gopass otp -o "websites/"$selected > /dev/shm/dwms
	dwms_refresh
fi
