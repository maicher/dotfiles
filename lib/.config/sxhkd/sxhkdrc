# DOT SKIP server

# Speakers
XF86AudioMute
	pamixer -t; dwms_refresh
XF86Audio{Lower,Raise}Volume
	pamixer -{d,i} 2; dwms_refresh

# Microphone
F1
	pamixer --source $(pamixer_mic_source) -t; dwms_refresh
F{2,3}
	pamixer --source $(pamixer_mic_source) -{d,i} 1; dwms_refresh

# Screen
XF86MonBrightness{Up,Down}
	xbacklight -{inc,dec} 10
XF86Display
	xrandr --auto

# Bluetooth
F{7,8}
	bt {off,on}

F9
	st dev_logs &; sleep 1; st dev_notes &; sleep 1; st dev_dotfiles

F10
	thunderbird

# Terminal
super + t
	st tmux

# Passwords manager
super + g
	dmenu_pass -w "$DMENU_PASS" -o "$DWM_TEXT" && dwms_refresh
super + G
	dmenu_pass -r "$DMENU_PASS" -o "$DWM_TEXT" && dwms_refresh
super + L
	dmenu_pass -r "$DMENU_PASS" --login
super + D
	dmenu_pass -w "$DMENU_PASS" -o "$DWM_TEXT" --cleanup && dwms_refresh
super + n
	st gopass new

# Snippets
super + s
	dmenu_pick_from_file $DMENU_SNIPPETS
super + S
	st vim $DMENU_SNIPPETS

# Bookmarks
super + u
	dmenu_pick_from_file $DMENU_URLS
super + U
	st vim $DMENU_URLS

# Browsers
super + {B,w,C}
	{brave,firefox,google-chrome}

# LibreOffice calc
super + c
	soffice -calc

# Screenshots
Print
	flameshot gui

# Boot a dev project
super + p
	dev
